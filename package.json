{
  "name": "motionforge",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "mcp:dev": "pnpm -C packages/mcp dev",
    "mcp:build": "pnpm -C packages/mcp build",
    "mcp:start": "pnpm -C packages/mcp start",
    "mcp:demo:unity": "pnpm -C packages/mcp demo:unity",
    "motionforge:cli": "pnpm -C packages/mcp motionforge",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "gate": "pnpm lint && pnpm typecheck && pnpm test && pnpm build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0"
  }
}
